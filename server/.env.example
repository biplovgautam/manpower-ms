# Server environment variables (production example)
# Render will inject PORT automatically; keep 5000 for local dev.
PORT=5000
NODE_ENV=production
CLIENT_URL=https://manpower.biplovgautam.com.np

# Database
MONGO_URI=your_mongodb_connection_string

# Auth
JWT_SECRET=replace_with_strong_secret
JWT_LIFETIME=30d

# Email (Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Twilio (SMS)
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_NUMBER=+10000000000

# Optional: public API URL (useful for logs/links)
PUBLIC_API_URL=https://api.manpower.biplovgautam.com.np
